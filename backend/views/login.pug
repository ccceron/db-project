extends layout 

block content 
    .container 
        .row.justify-content-center 
            .col-md-6 
                h2.text-center Iniciar sesión 
                form(method='POST', action='/login')
                    .form-group 
                        label(for='username') Nombre de usuario 
                        input.form-control(type='text', name='username', id='username', required= true)
                    .form-group 
                        label(for="password") Contraseña
                        input.form-control(type='password', name ='password', id='password', required=true)
                    button.btn.btn-primary.btn-block(type='submit') Iniciar sesión